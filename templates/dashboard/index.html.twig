{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <!-- begin #content -->
    <div id="content" class="content">
        <div class="row">
            <div class="col-6">
                <!-- begin tabs -->
                <ul class="nav nav-tabs nav-tabs-inverse nav-justified nav-justified-mobile" data-sortable-id="index-2">
                    {% for flux in fluxRSS %}
                        <li class="nav-item"><a href="#flux-{{ loop.index0 }}" data-toggle="tab" class="nav-link {{ loop.first ? 'active' }}"><i class="fa fa-rss fa-lg m-r-5"></i> <span
                                        class="d-none d-md-inline">{{ flux['title'] }}</span></a></li>
                    {% endfor %}
                </ul>
                <div class="tab-content" data-sortable-id="index-3">
                    {% for flux in fluxRSS %}
                        <div class="tab-pane fade {{ loop.first ? 'active show' }}" id="flux-{{ loop.index0 }}">
                            <div class="height-lg" data-scrollbar="true">
                                <ul class="media-list media-list-with-divider">
                                    {% for f in flux['flux'] %}
                                        <li class="media media-lg">
                                            <div class="media-body">
                                                <h5 class="media-heading"><a href="{{ f.link }}" class="pull-left">{{ f.title }}</a></h5><br/>
                                                {{ f.description|raw }}
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>

                    {% endfor %}
                </div>
                <!-- end tabs -->
            </div>
        </div>
        <!-- begin widget-list -->
    </div>

    <!-- end #content -->
{% endblock %}

    {% block javascripts %}
    {% endblock %}